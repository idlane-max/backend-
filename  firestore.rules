rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    function isSelf(uid) { return isSignedIn() && request.auth.uid == uid; }

    // ⚠️ Les users ne doivent PAS écrire directement ;
    // tout passe par Cloud Functions (où tu fais les checks de rôle).
    match /users/{uid} {
      allow read: if isSelf(uid);   // chacun lit son propre doc
      allow write: if false;        // personne n'écrit directement
    }

    // Tout le reste bloqué par défaut
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
